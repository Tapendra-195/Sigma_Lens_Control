#ifndef Message03_h
#define Message03_h

#include "Arduino.h"
#include "Message.h"
#include <array>

class Message04 : public Message {
public:
  Message04();
  //delFocus is 2 byte, 2's complement number
  void changeFocus(uint16_t delFocus);

private:
  uint16_t delFocus = 0x00;  
  bool changeFocus = false;
  enum BYTE { BYTE_FOCUS_L=20, BYTE_FOCUS_H=21 };
};

#endif
